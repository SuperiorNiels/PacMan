<?xml version="1.0" encoding="UTF-8" ?>
<pacman>
    <game fps="60" window_width="1000" window_height="700">
        <collision>../data/world.map</collision>
        <sprites tile_width="8">../data/sprites.png</sprites>
        <graphics>SDL</graphics>
    </game>
    <entities>
        <wall_tile>
            <position_component />
            <render_component>
                <clips total="1">
                    <!-- x:y: -1 == get coordinates from map, w:h: -1 == tile_width -->
                    <clip x="-1" y="-1" w="-1" h="-1"/>
                </clips>
            </render_component>
            <collision_component />
        </wall_tile>
        <player_only_wall>
            <position_component />
            <render_component>
                <clips total="1">
                    <!-- x:y: -1 == get coordinates from map, w:h: -1 == tile_width -->
                    <clip x="-1" y="-1" w="-1" h="-1"/>
                </clips>
            </render_component>
        </player_only_wall>
        <point>
            <position_component />
            <render_component>
                <clips total="1">
                    <!-- x:y: -1 == get coordinates from map, w:h: -1 == tile_width -->
                    <clip x="-1" y="-1" w="-1" h="-1"/>
                </clips>
            </render_component>
            <collision_component />
            <points_component points="100" />
        </point>
        <player>
            <position_component />
            <render_component x_render_offset="0.25" y_render_offset="0.25">
                <clips total="12">
                    <clip x="489" y="1" w="13" h="13"/>
                    <clip x="473" y="1" w="13" h="13"/>
                    <clip x="457" y="1" w="13" h="13"/>
                    <clip x="489" y="1" w="13" h="13"/>
                    <clip x="473" y="17" w="13" h="13"/>
                    <clip x="457" y="17" w="13" h="13"/>
                    <clip x="489" y="1" w="13" h="13"/>
                    <clip x="473" y="34" w="13" h="13"/>
                    <clip x="457" y="34" w="13" h="13"/>
                    <clip x="489" y="1" w="13" h="13"/>
                    <clip x="473" y="49" w="13" h="13"/>
                    <clip x="457" y="49" w="13" h="13"/>
                </clips>
                <animation_length value="3"/>
                <animation_speed value="6"/>
                <direction_offset left="3" right="0" up="6" down="9"/>
            </render_component>
            <collision_component />
            <points_component />
            <movable_component speed="0.01"/>
            <player_input_component />
            <score_component>
                <font size="18">../data/Joystix.TTF</font>
            </score_component>
            <lives_component lives="3">
                <font size="18">../data/Joystix.TTF</font>
            </lives_component>
        </player>
        <ghost>
            <position_component />
            <render_component x_render_offset="0.3" y_render_offset="0.3">
                <clips total="8" y_offset="16">
                    <clip x="457" y="65" w="14" h="13"/>
                    <clip x="473" y="65" w="14" h="13"/>
                    <clip x="489" y="65" w="14" h="13"/>
                    <clip x="457" y="65" w="14" h="13"/>
                    <clip x="489" y="65" w="14" h="13"/>
                    <clip x="505" y="65" w="14" h="13"/>
                    <clip x="521" y="65" w="14" h="13"/>
                    <clip x="537" y="65" w="14" h="13"/>
                    <clip x="553" y="65" w="14" h="13"/>
                    <clip x="569" y="65" w="14" h="13"/>
                </clips>
                <animation_length value="2"/>
                <animation_speed value="20"/>
                <direction_offset down="2" right="0" left="4" up="6"/> <!-- fixme: ghost down animation is wrong -->
            </render_component>
            <collision_component />
            <points_component />
            <movable_component speed="0.015"/>
            <ai_component />
        </ghost>
    </entities>
</pacman>