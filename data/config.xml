<?xml version="1.0" encoding="UTF-8" ?>
<pacman>
    <game fps="60" screen_x="448" screen_y="496">
        <collision>../data/collision.map</collision>
        <sprites tile_width="8">../data/sprites.png</sprites>
        <graphics>SDL</graphics>
    </game>
    <entities>
        <wall_tile>
            <position_component />
            <render_component>
                <clips total="1">
                    <!-- x:y: -1 == get coordinates from map, w:h: -1 == tile_width -->
                    <clip x="-1" y="-1" w="-1" h="-1"/>
                </clips>
            </render_component>
            <collision_component />
        </wall_tile>
        <point>
            <position_component />
            <render_component>
                <clips total="1">
                    <!-- x:y: -1 == get coordinates from map, w:h: -1 == tile_width -->
                    <clip x="-1" y="-1" w="-1" h="-1"/>
                </clips>
            </render_component>
            <collision_component />
            <points_component />
        </point>
        <player>
            <position_component />
            <render_component>
                <clips total="12">
                    <clip x="489" y="1" w="13" h="13"/>
                    <clip x="473" y="1" w="13" h="13"/>
                    <clip x="457" y="1" w="13" h="13"/>
                    <clip x="489" y="1" w="13" h="13"/>
