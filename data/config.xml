<pacman>
    <game fps="60" screen_x="448" screen_y="496">
        <collision>../data/collision.map</collision>
        <sprites tile_width="8">../data/sprites.png</sprites>
        <graphics>SDL</graphics>
    </game>
    <entities>
        <wall_tile>
            <position_component />
            <render_component>
                <clips total="1">
